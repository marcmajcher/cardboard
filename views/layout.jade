doctype html
html
  head
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/style.css")
  body(ng-app="cardboardApp")
    nav.navbar.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#collapse-top", aria-expanded="false")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") CardBoard

        .navbar-collapse.collapse(id="collapse-top", aria-expanded="false")
          ul.nav.navbar-nav.navbar-right.aligner
            if (!user)
              li
                a(href="/login/twitter")
                  img(src="/img/sign-in-with-twitter-gray.png", alt="Sign in with Twitter")
            if (user)
              li Welcome, #{user.username}! |
              li
                a(href="/logout") Log out

    block content

  script(src="http://code.jquery.com/jquery-1.11.2.min.js")
  script(src="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.12/angular.js")
  script(src="/scripts/main.js")
